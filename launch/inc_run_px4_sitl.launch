<launch>
    <!-- Posix SITL environment launch script -->
    <!-- launchs PX4 SITL -->

    <!-- vehcile model and config -->
    <arg name="est" default="ekf2" />
    <arg name="vehicle" default="uuv_hippocampus" />
    <arg name="ID" default="0" />
    <env name="PX4_SIM_MODEL" value="$(arg vehicle)" />
    <env name="PX4_ESTIMATOR" value="$(arg est)" />
    <arg name="mavlink_udp_port" default="$(eval 14560 + arg('ID'))" />
    <arg name="mavlink_tcp_port" default="$(eval 4560 + arg('ID'))" />

    <!-- PX4 configs -->
    <arg name="interactive" default="true" />

    <!-- PX4 SITL -->
    <arg unless="$(arg interactive)" name="px4_command_arg1" value="-d" />
    <arg if="$(arg interactive)" name="px4_command_arg1" value="" />
    <node name="sitl_$(arg ID)" pkg="px4" type="px4" output="screen" args="$(find px4)/ROMFS/px4fmu_common -s etc/init.d-posix/rcS -i $(arg ID) -w sitl_$(arg vehicle)_$(arg ID) $(arg px4_command_arg1)"></node>
</launch>
